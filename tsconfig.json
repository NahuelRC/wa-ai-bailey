{
  "compilerOptions": {
    // Dónde compila
    "rootDir": "./src",
    "outDir": "./dist",

    // Entorno Node ESM moderno
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Tipados
    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    // Interop con CJS (whatsapp-web.js, etc.)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Calidad y performance
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true

    // Sugerencia: quitamos "verbatimModuleSyntax" para que el interop funcione sin dolor
    // y no necesitamos JSX en un backend, así que lo omitimos
  }
}